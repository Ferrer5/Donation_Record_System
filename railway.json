{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "mvn clean package -DskipTests",
    "startCommand": "java -Dspring.profiles.active=production -jar target/donation-report-system-1.0.0.jar"
  },
  "deploy": {
    "startCommand": "java -Dspring.profiles.active=production -jar target/donation-report-system-1.0.0.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "checks": {
    "enabled": true,
    "timeout": 180,
    "interval": "30s"
  }
}
